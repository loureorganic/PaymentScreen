<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/iconPayment"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_cash"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/paymentWayTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="4dp"
        android:text="R$ 1.250,63"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/iconPayment"
        app:layout_constraintTop_toBottomOf="@id/paymentTitle" />

    <TextView
        android:id="@+id/valuePayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="Reduzido para R$ 169,40"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/iconPayment"
        app:layout_constraintTop_toBottomOf="@id/paymentWayTitle" />


    <TextView
        android:id="@+id/datePaymentGeneral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="16/10/2018"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/paymentWayTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/paymentWayTitle" />


</androidx.constraintlayout.widget.ConstraintLayout>